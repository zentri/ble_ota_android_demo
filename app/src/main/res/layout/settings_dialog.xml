<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_settings_use_latest"
        android:textColor="@color/black"
        android:id="@+id/use_latest_description"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings_use_latest_checkbox"
        android:layout_toRightOf="@id/use_latest_description"
        android:layout_marginLeft="100dp"
        android:layout_alignBaseline="@id/use_latest_description"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_settings_firmware_filename"
        android:textColor="@color/black"
        android:id="@+id/filename_description"
        android:textSize="20sp"
        android:layout_below="@+id/use_latest_description"
        android:layout_marginTop="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/settings_editText"
        android:layout_below="@+id/filename_description"/>

</RelativeLayout>